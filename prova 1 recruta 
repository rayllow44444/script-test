        {
            subject: "Geografia",
            question: "Qual é o ponto mais alto do relevo brasileiro?",
            options: ["Pico da Bandeira", "Monte Roraima", "Pico da Neblina", "Pico das Agulhas Negras"],
            correct: 2,
            explanation: "O Pico da Neblina, no Amazonas, é o ponto culminante do Brasil."
        }
    ];

    let score = 0;

    function renderQuiz() {
        const container = document.getElementById('quiz-container');
        container.innerHTML = '';

        quizData.forEach((item, index) => {
            // Cria o cartão da pergunta
            const card = document.createElement('div');
            card.className = 'question-card';

            // Tag da Matéria
            const tag = document.createElement('span');
            tag.className = 'subject-tag';
            tag.innerText = item.subject;
            card.appendChild(tag);

            // Texto da Pergunta
            const qText = document.createElement('div');
            qText.className = 'question-text';
            qText.innerText = `${index + 1}. ${item.question}`;
            card.appendChild(qText);

            // Container das Opções
            const optionsDiv = document.createElement('div');
            optionsDiv.className = 'options';

            item.options.forEach((opt, optIndex) => {
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.innerText = opt;
                btn.onclick = () => checkAnswer(btn, index, optIndex, item.correct, item.explanation);
                optionsDiv.appendChild(btn);
            });

            card.appendChild(optionsDiv);

            // Explicação (inicialmente oculta)
            const explanationDiv = document.createElement('div');
            explanationDiv.className = 'explanation';
            explanationDiv.id = `explanation-${index}`;
            card.appendChild(explanationDiv);

            container.appendChild(card);
        });
    }

    function checkAnswer(btnElement, questionIndex, selectedOption, correctOption, explanationText) {
        const card = btnElement.parentElement.parentElement;
        const buttons = card.querySelectorAll('.option-btn');
        const explanationDiv = document.getElementById(`explanation-${questionIndex}`);

        // Desabilita todos os botões dessa questão para não clicar de novo
        buttons.forEach(button => button.disabled = true);

        // Verifica se acertou
        if (selectedOption === correctOption) {
            btnElement.classList.add('correct');
            score++;
            document.getElementById('score').innerText = score;
            explanationDiv.innerHTML = `<strong>Correto!</strong> <br> ${explanationText}`;
        } else {
            btnElement.classList.add('wrong');
            // Marca a correta para o usuário saber qual era
            buttons[correctOption].classList.add('correct');
            explanationDiv.innerHTML = `<strong>Incorreto.</strong> A resposta certa era: <em>${buttons[correctOption].innerText}</em>.<br><br>${explanationText}`;
        }

        // Mostra a explicação
        explanationDiv.style.display = 'block';
    }

    // Inicia o quiz ao carregar a página
    window.onload = renderQuiz;

</script>

</body>
